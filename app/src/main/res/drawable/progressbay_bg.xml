<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp" />
            <gradient
                android:angle="270"
                android:centerColor="@color/color_dbmall_btn_bg2"
                android:endColor="@color/color_dbmall_btn_bg2"
                android:startColor="@color/color_dbmall_btn_bg2" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="0"
                    android:centerColor="@color/color_dbmall_btn_bg1"
                    android:centerY="0.75"
                    android:endColor="@color/color_dbmall_btn_bg1"
                    android:startColor="@color/color_dbmall_btn_bg1" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="0"
                    android:endColor="@color/color_dbmall_btn_bg1"
                    android:startColor="@color/color_dbmall_btn_bg1" />
            </shape>
        </clip>
    </item>

</layer-list>