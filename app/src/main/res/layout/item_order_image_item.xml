<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp100"
    android:layout_height="@dimen/dp100"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/dp80"
        android:layout_height="@dimen/dp80">

        <com.tymall.view.CustomRoundAngleImageView
            android:id="@+id/iv_product_picture"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:background="@mipmap/icon_order_default_white"
            android:scaleType="centerCrop"
            roundiv:radius="@dimen/dp5" />

        <TextView
            android:id="@+id/tv_product_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp5"
            android:layout_marginBottom="@dimen/dp5"
            android:background="@drawable/shape_round_gray_yuan"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/dp10"
            android:visibility="visible" />
    </RelativeLayout>
</LinearLayout>
