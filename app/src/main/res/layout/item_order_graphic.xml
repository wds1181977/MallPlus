<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_item_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="@color/background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp15"
            android:background="@mipmap/icon_shop" />

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp40"
            android:text=""
            android:textColor="@color/notice_carde_view_text_color"
            android:textSize="@dimen/dp14" />

        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp15"
            android:text=""
            android:textColor="@color/setting_sign_out_color"
            android:textSize="@dimen/dp12" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.tymall.view.CustomRoundAngleImageView
            android:id="@+id/iv_product_picture"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:layout_marginLeft="@dimen/dp15"
            android:background="@mipmap/icon_order_default_white"
            android:scaleType="centerCrop"
            roundiv:radius="@dimen/dp5" />

        <TextView
            android:id="@+id/tv_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp20"
            android:lineSpacingExtra="@dimen/dp4"
            android:text=""
            android:textColor="@color/notice_carde_view_text_color"
            android:textSize="@dimen/dp14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_products_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共 件商品"
            android:textColor="@color/notice_carde_view_text_color"
            android:textSize="@dimen/dp14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:text="实付款:"
            android:textColor="@color/notice_carde_view_text_color"
            android:textSize="@dimen/dp14" />

        <TextView
            android:id="@+id/tv_payment_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp2"
            android:layout_marginRight="@dimen/dp15"
            android:text=""
            android:textColor="@color/notice_carde_view_text_color"
            android:textSize="@dimen/dp16"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:background="@color/line_gray_shallow" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_button_one"
            android:layout_width="@dimen/dp90"
            android:layout_height="@dimen/dp30"
            android:background="@drawable/shape_white_radio_btn_gray"
            android:gravity="center"
            android:text=""
            android:textColor="@color/notice_carde_view_text_color"
            android:textSize="@dimen/dp14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_button_two"
            android:layout_width="@dimen/dp90"
            android:layout_height="@dimen/dp30"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:background="@drawable/shape_white_radio_btn_red"
            android:gravity="center"
            android:text=""
            android:textColor="@color/red_color"
            android:textSize="@dimen/dp14"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>
