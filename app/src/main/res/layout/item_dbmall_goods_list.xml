<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    android:layout_marginTop="@dimen/dp10"
    android:layout_marginBottom="@dimen/dp1"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:orientation="horizontal">

        <com.tymall.view.CustomRoundAngleImageView
            android:id="@+id/goods_image"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:visibility="visible"
            roundiv:radius="@dimen/dp5" />

        <RelativeLayout
            android:id="@+id/root_view"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10">

            <TextView
                android:id="@+id/goods_title"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_box_bg_title_color"
                android:textSize="15sp" />



            <LinearLayout
                android:id="@+id/dbm_rate_ititle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goods_title"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">




                <TextView
                    android:id="@+id/originalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp1"
                    android:text=""
                    android:textColor="@color/color_dbmall_gray_text"
                    android:textSize="12sp" />




            </LinearLayout>

            <LinearLayout
                android:id="@+id/dbm_price_ititle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dbm_rate_ititle"
                android:orientation="horizontal">




                <TextView
                    android:id="@+id/dbmPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/setting_sign_out_color"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/coinType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/setting_sign_out_color"
                    android:textStyle="bold"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/dbmRatePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp6"
                    android:textColor="@color/color_box_bg_title1_color"
                    android:textSize="12sp" />






            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dbm_price_ititle"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_dbmall_novigation_cash_back"
                    android:textColor="@color/color_box_bg_title_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/cash_back_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_box_bg_title_color"
                    android:textSize="12sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/sales_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp2"
                android:textColor="@color/setting_gray_color"
                android:textSize="12sp" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>



